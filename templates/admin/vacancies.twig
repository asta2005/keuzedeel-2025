{% extends 'layout.twig' %}
{% block content %}
<h2>Vacatures beheer</h2>
<form method="post" action="/?page=admin_vacancies">
  <label>Titel<input type="text" name="title" required></label>
  <label>Samenvatting<input type="text" name="summary" required></label>
  <label>Beschrijving<textarea name="description" required></textarea></label>
  <button type="submit">Maak vacature</button>
</form>

<h3>Bestaande vacatures</h3>
<ul>
{% for v in vacancies %}
  <li>{{ v.id }} - {{ v.title }} ({{ v.created_at }})</li>
{% else %}
  <li>Geen</li>
{% endfor %}
</ul>
{% endblock %}
