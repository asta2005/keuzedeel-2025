{% extends "layout.twig" %}
{% block content %}
<article>
  <h2>{{ vac.title }}</h2>
  <p>{{ vac.description }}</p>
  {% if flash %}<p class="flash">{{ flash }}</p>{% endif %}
  <h3>Solliciteer</h3>
  <form method="post" action="/?page=apply" enctype="multipart/form-data">
    <input type="hidden" name="vacancy_id" value="{{ vac.id }}">
    <label>Naam<input type="text" name="name" required></label>
    <label>Email<input type="email" name="email" required></label>
    <label>CV (PDF)<input type="file" name="cv" accept=".pdf,.doc,.docx"></label>
    <button type="submit">Verstuur sollicitatie</button>
  </form>
</article>
{% endblock %}
