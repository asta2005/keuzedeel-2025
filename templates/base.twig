<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{% block title %}Keuzedeel Projecten{% endblock %}</title>
    <style>
        body { font-family: Arial, Helvetica, sans-serif; margin:0; padding:0; background:#f4f6f8; color:#222 }
        header { background:#2b7a78; color:white; padding:20px }
        .container{ max-width:1000px; margin:20px auto; padding:10px }
        .card{ background:white; border-radius:8px; box-shadow:0 2px 6px rgba(0,0,0,0.08); padding:16px; margin-bottom:16px }
        .grid{ display:grid; grid-template-columns: repeat(auto-fit, minmax(240px,1fr)); gap:16px }
        img.thumb{ width:100%; height:160px; object-fit:cover; border-radius:6px }
        .muted{ color:#666; font-size:0.9em }
        .btn{ display:inline-block; padding:8px 12px; background:#2b7a78; color:white; border-radius:6px; text-decoration:none }
        .admin-bar{ text-align:right; margin-bottom:10px }
        form input, form textarea, form select { width:100%; padding:8px; margin:6px 0; box-sizing:border-box }
    </style>
</head>
<body>
<header>
    <div class="container">
        <h1>Keuzedeel Projecten</h1>
    </div>
</header>
<div class="container">
    {% block content %}{% endblock %}
</div>
</body>
<script>
function toggleMenu() {
    let menu = document.getElementById("ams-mobile-menu");
    menu.classList.toggle("show");
}
</script>

</html>

