{% extends 'base.twig' %}
{% block title %}{{ project.title }}{% endblock %}
{% block content %}
<div class="card">
    <a href="/projects" class="muted">← terug naar projecten</a>
    <h2>{{ project.title }}</h2>
    <div class="muted">{{ project.municipality }} — {{ project.created_at }}</div>
    {% if project.image %}
        <img style="width:100%; max-height:480px; object-fit:cover; border-radius:8px; margin-top:10px" src="/{{ project.image }}">
    {% endif %}
    <div style="margin-top:12px">{{ project.description|raw }}</div>
</div>
{% endblock %}
